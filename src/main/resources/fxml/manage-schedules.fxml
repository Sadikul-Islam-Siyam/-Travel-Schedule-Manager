<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.ManageSchedulesController"
            minHeight="600.0" minWidth="1000.0"
            stylesheets="@../css/styles.css"
            style="-fx-background-color: linear-gradient(to bottom right, #1a252f, #2c3e50);">
    
    <top>
        <VBox style="-fx-background-color: rgba(44, 62, 80, 0.9); -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button text="â† Back" onAction="#handleBack" 
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="ðŸ“ Manage Schedules" textFill="white">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="scheduleCountLabel" text="Schedules: 0" textFill="white" style="-fx-font-size: 14px;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <HBox spacing="15" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <!-- Left Panel: Schedule List -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;" HBox.hgrow="ALWAYS" prefWidth="400">
                <Label text="Schedule List" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>
                
                <!-- Filter Controls -->
                <HBox spacing="10">
                    <ComboBox fx:id="filterTypeCombo" promptText="Filter Type" prefWidth="150">
                        <items>
                            <javafx.collections.FXCollections fx:factory="observableArrayList">
                                <String fx:value="ALL"/>
                                <String fx:value="BUS"/>
                                <String fx:value="TRAIN"/>
                            </javafx.collections.FXCollections>
                        </items>
                    </ComboBox>
                    <TextField fx:id="searchField" promptText="Search route..." HBox.hgrow="ALWAYS"/>
                    <Button text="ðŸ”„" onAction="#handleRefresh" style="-fx-font-size: 14px;"/>
                </HBox>
                
                <!-- Schedule Table -->
                <TableView fx:id="scheduleTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="80"/>
                        <TableColumn fx:id="typeColumn" text="Type" prefWidth="60"/>
                        <TableColumn fx:id="routeColumn" text="Route" prefWidth="150"/>
                        <TableColumn fx:id="fareColumn" text="Fare" prefWidth="70"/>
                    </columns>
                </TableView>
                
                <!-- Action Buttons -->
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Edit Selected" onAction="#handleEdit" 
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
                    <Button text="Delete Selected" onAction="#handleDelete" 
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
                </HBox>
            </VBox>
            
            <!-- Right Panel: Add/Edit Form -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;" prefWidth="550">
                <Label fx:id="formTitleLabel" text="Add New Schedule" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>
                
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                    <VBox spacing="12" style="-fx-padding: 5;">
                        <!-- Schedule Type -->
                        <Label text="Schedule Type *" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="scheduleTypeCombo" prefWidth="200">
                            <items>
                                <javafx.collections.FXCollections fx:factory="observableArrayList">
                                    <String fx:value="BUS"/>
                                    <String fx:value="TRAIN"/>
                                </javafx.collections.FXCollections>
                            </items>
                        </ComboBox>
                        
                        <Separator/>
                        
                        <!-- Basic Info -->
                        <Label text="Basic Information" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                        
                        <Label text="Schedule ID *"/>
                        <TextField fx:id="scheduleIdField" promptText="e.g., BUS001 or TRAIN001"/>
                        
                        <GridPane hgap="10" vgap="10">
                            <Label text="Origin *" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <TextField fx:id="originField" promptText="e.g., Dhaka" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                            
                            <Label text="Destination *" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <TextField fx:id="destinationField" promptText="e.g., Chittagong" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        </GridPane>
                        
                        <Separator/>
                        
                        <!-- Time & Fare -->
                        <Label text="Schedule Details" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                        
                        <GridPane hgap="10" vgap="10">
                            <Label text="Departure Date *" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <DatePicker fx:id="departureDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                            
                            <Label text="Departure Time *" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <TextField fx:id="departureHourField" promptText="HH" prefWidth="50"/>
                                <Label text=":" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                                <TextField fx:id="departureMinuteField" promptText="MM" prefWidth="50"/>
                            </HBox>
                            
                            <Label text="Arrival Date *" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <DatePicker fx:id="arrivalDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            
                            <Label text="Arrival Time *" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                            <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                <TextField fx:id="arrivalHourField" promptText="HH" prefWidth="50"/>
                                <Label text=":" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                                <TextField fx:id="arrivalMinuteField" promptText="MM" prefWidth="50"/>
                            </HBox>
                            
                            <Label text="Fare (BDT) *" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                            <TextField fx:id="fareField" promptText="e.g., 850.00" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                            
                            <Label text="Available Seats *" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                            <TextField fx:id="seatsField" promptText="e.g., 35" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                        </GridPane>
                        
                        <Separator/>
                        
                        <!-- Type-Specific Fields -->
                        <VBox fx:id="busFieldsContainer" spacing="10" managed="false" visible="false">
                            <Label text="Bus Details" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                            <Label text="Company Name *"/>
                            <TextField fx:id="companyField" promptText="e.g., Green Line"/>
                            <Label text="Bus Type *"/>
                            <ComboBox fx:id="busTypeCombo" prefWidth="200">
                                <items>
                                    <javafx.collections.FXCollections fx:factory="observableArrayList">
                                        <String fx:value="AC"/>
                                        <String fx:value="Non-AC"/>
                                        <String fx:value="Sleeper"/>
                                        <String fx:value="Deluxe"/>
                                        <String fx:value="AC Sleeper"/>
                                    </javafx.collections.FXCollections>
                                </items>
                            </ComboBox>
                        </VBox>
                        
                        <VBox fx:id="trainFieldsContainer" spacing="10" managed="false" visible="false">
                            <Label text="Train Details" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                            <Label text="Train Name *"/>
                            <TextField fx:id="trainNameField" promptText="e.g., Subarna Express"/>
                            <Label text="Train Class *"/>
                            <ComboBox fx:id="trainClassCombo" prefWidth="200">
                                <items>
                                    <javafx.collections.FXCollections fx:factory="observableArrayList">
                                        <String fx:value="AC"/>
                                        <String fx:value="First Class"/>
                                        <String fx:value="Snigdha"/>
                                        <String fx:value="S_Chair"/>
                                        <String fx:value="Shovan"/>
                                    </javafx.collections.FXCollections>
                                </items>
                            </ComboBox>
                        </VBox>
                        
                        <!-- Action Buttons -->
                        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 15 0 0 0;">
                            <Button fx:id="saveButton" text="Save Schedule" onAction="#handleSave" 
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-cursor: hand; -fx-background-radius: 5; -fx-font-weight: bold;"/>
                            <Button text="Clear Form" onAction="#handleClearForm" 
                                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-cursor: hand; -fx-background-radius: 5;"/>
                        </HBox>
                    </VBox>
                </ScrollPane>
            </VBox>
        </HBox>
    </center>
</BorderPane>
