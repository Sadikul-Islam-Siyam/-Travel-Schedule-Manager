<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.travelmanager.controller.AddTrainRouteController"
            style="-fx-background-color: #f5f6fa;">
    
    <top>
        <VBox style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
            <padding><Insets top="20" right="30" bottom="20" left="30"/></padding>
            
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button text="â† Back" onAction="#handleBack" 
                        style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-cursor: hand; -fx-font-size: 14px;"/>
                <Label text="Add Train Route" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #f5f6fa; -fx-background-color: #f5f6fa;">
            <VBox spacing="20" style="-fx-padding: 30; -fx-background-color: #f5f6fa;">
                
                <!-- Train Overview Section -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="ðŸš‚" style="-fx-font-size: 18px;"/>
                        <Label text="Train Overview" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    </HBox>
                    
                    <VBox spacing="15">
                        <!-- Train Name -->
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Train Name *" style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 600; -fx-min-width: 100;"/>
                            <TextField fx:id="trainNameField" promptText="Tista Express" HBox.hgrow="ALWAYS"
                                       style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-font-size: 13px;"/>
                            <Label text="Off Day" style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 600; -fx-padding: 0 0 0 20;"/>
                            <ComboBox fx:id="offDayCombo" prefWidth="150"
                                      style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6 10; -fx-font-size: 13px;"/>
                        </HBox>
                        
                        <Separator style="-fx-background-color: #e0e0e0;"/>
                        
                        <!-- Start Station -->
                        <VBox spacing="8">
                            <Label text="Start (Origin) *" style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 600;"/>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="ðŸ“" style="-fx-font-size: 16px;"/>
                                <TextField fx:id="startStationField" promptText="Dhaka" prefWidth="180"
                                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-font-size: 13px;"/>
                                <Label text="Departure:" style="-fx-font-size: 12px; -fx-text-fill: #777; -fx-padding: 0 0 0 15;"/>
                                <TextField fx:id="startDepartureField" promptText="07:00" prefWidth="70"
                                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8; -fx-font-size: 13px; -fx-alignment: center;"/>
                            </HBox>
                        </VBox>
                        
                        <!-- Destination Station -->
                        <VBox spacing="8">
                            <Label text="Destination (Final) *" style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 600;"/>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="ðŸ“" style="-fx-font-size: 16px;"/>
                                <TextField fx:id="destStationField" promptText="Jamalpur" prefWidth="180"
                                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-font-size: 13px;"/>
                                <Label text="Arrival:" style="-fx-font-size: 12px; -fx-text-fill: #777; -fx-padding: 0 0 0 15;"/>
                                <TextField fx:id="destArrivalField" promptText="13:00" prefWidth="70"
                                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8; -fx-font-size: 13px; -fx-alignment: center;"/>
                                <Label text="Fare (à§³):" style="-fx-font-size: 12px; -fx-text-fill: #777; -fx-padding: 0 0 0 15;"/>
                                <TextField fx:id="destFareField" promptText="220" prefWidth="80"
                                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8; -fx-font-size: 13px; -fx-alignment: center;"/>
                            </HBox>
                        </VBox>
                    </VBox>
                </VBox>
                
                <!-- Route Stops Section -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <VBox spacing="4">
                        <Label text="Intermediate Stops (Optional)" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label text="Add stops between origin and destination. These are optional stopovers where passengers can board or alight." 
                               style="-fx-font-size: 12px; -fx-text-fill: #95a5a6;" wrapText="true"/>
                    </VBox>
                    
                    <!-- Stops List Container -->
                    <VBox fx:id="stopsContainer" spacing="0" style="-fx-padding: 10 0;">
                        <!-- Stop rows will be added here dynamically -->
                    </VBox>
                    
                    <Button text="+ Add Stop" onAction="#handleAddStop" 
                            style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-cursor: hand; -fx-font-size: 13px; -fx-font-weight: 600; -fx-padding: 10; -fx-border-color: transparent; -fx-background-radius: 6;">
                        <font><Font name="System Bold" size="13"/></font>
                    </Button>
                </VBox>
                
                <!-- Error/Status Labels -->
                <VBox spacing="5">
                    <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 13px; -fx-font-weight: 600;" wrapText="true"/>
                    <Label fx:id="statusLabel" style="-fx-text-fill: #27ae60; -fx-font-size: 13px;" wrapText="true"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-padding: 20 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, -2);">
            <Button text="Save Draft" 
                    style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8; -fx-text-fill: #555; -fx-cursor: hand; -fx-padding: 12 30; -fx-font-size: 14px; -fx-font-weight: 600;"/>
            <Button text="âœ“ Submit for Approval" onAction="#handleSubmit" 
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 12 30; -fx-font-size: 14px; -fx-font-weight: 600;">
                <font><Font name="System Bold" size="14"/></font>
            </Button>
        </HBox>
    </bottom>
    
</BorderPane>
