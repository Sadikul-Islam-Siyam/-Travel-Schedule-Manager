<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.AccountApprovalController"
            minHeight="500.0" minWidth="800.0"
            stylesheets="@../css/styles.css"
            style="-fx-background-color: linear-gradient(to bottom right, #1a252f, #2c3e50);">
    
    <top>
        <VBox style="-fx-background-color: rgba(44, 62, 80, 0.9); -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button text="â† Back" onAction="#handleBack" 
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Pending Account Approvals" textFill="white">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
            <Label fx:id="statusLabel" textFill="#2c3e50" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
            
            <!-- Compact header -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: white; -fx-padding: 12 15; -fx-background-radius: 5;">
                <Label text="Pending Account Approvals" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2c3e50;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Review new user registrations" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
            </HBox>
            
            <!-- Accounts list (minimal cards) -->
            <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true"
                       style="-fx-background: #ecf0f1; -fx-background-color: #ecf0f1;">
                <VBox fx:id="accountsContainer" spacing="8" style="-fx-padding: 5;"/>
            </ScrollPane>
            
            <!-- Empty state -->
            <Label fx:id="emptyLabel" text="No pending accounts awaiting approval." 
                   textFill="#95a5a6" style="-fx-font-size: 12px; -fx-font-style: italic; -fx-padding: 20;"
                   alignment="CENTER" maxWidth="Infinity"/>
        </VBox>
    </center>
</BorderPane>
