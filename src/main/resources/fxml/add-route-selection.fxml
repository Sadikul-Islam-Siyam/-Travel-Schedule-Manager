                <Label text="Route with intermediate stops" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;" textAlignment="CENTER" wrapText="true"/>
                <Button text="Add Train Route" onAction="#handleAddTrain" prefWidth="200"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 30; -fx-cursor: hand; -fx-background-radius: 8;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
