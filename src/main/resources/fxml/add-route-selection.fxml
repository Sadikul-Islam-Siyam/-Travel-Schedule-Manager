                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Add New Route" textFill="white">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 40;">
            <Label text="Select Transport Type" textFill="white" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            
