                <Label text="Simple point-to-point route" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;" textAlignment="CENTER" wrapText="true"/>
                <Button text="Add Bus Route" onAction="#handleAddBus" prefWidth="200"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 30; -fx-cursor: hand; -fx-background-radius: 8;"/>
            </VBox>
            
            <!-- Train Option Card -->
            <VBox alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-pref-width: 400; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 5);">
