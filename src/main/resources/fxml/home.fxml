                    <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #34495e; -fx-padding: 15; -fx-background-radius: 8;">
                        <Label text="Failed Logins (24h)" textFill="#95a5a6" style="-fx-font-size: 11px;"/>
                        <Label fx:id="failedLoginsLabel" text="0" textFill="#e74c3c" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #34495e; -fx-padding: 15; -fx-background-radius: 8;">
                        <Label text="Logins Today" textFill="#95a5a6" style="-fx-font-size: 11px;"/>
