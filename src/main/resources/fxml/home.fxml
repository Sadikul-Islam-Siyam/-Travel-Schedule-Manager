                    <Label text="API configurations" textAlignment="CENTER" wrapText="true" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                    <Button text="Manage Routes" onAction="#handleManageRoutes"
                            style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-padding: 10 25; -fx-font-size: 13px; -fx-cursor: hand; -fx-background-radius: 5;"/>
