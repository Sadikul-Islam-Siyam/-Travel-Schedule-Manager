                    <Button text="Review Accounts" onAction="#handlePendingAccounts"
                            style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-padding: 10 25; -fx-font-size: 13px; -fx-cursor: hand; -fx-background-radius: 5;"/>
                </VBox>
                
