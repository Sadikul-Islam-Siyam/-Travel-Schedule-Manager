<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.HomeController"
            prefHeight="700.0" prefWidth="1000.0"
            stylesheets="@../css/styles.css">
    
    <top>
        <VBox styleClass="header" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
                <Label text="Smart Multi-Modal Travel Schedule Manager" textFill="white">
                    <font>
                        <Font name="System Bold" size="26.0"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="40" BorderPane.alignment="CENTER" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets bottom="50" left="50" right="50" top="50"/>
            </padding>
            
            <Label text="Welcome! Choose an option to get started" textFill="#2c3e50">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            
            <HBox alignment="CENTER" spacing="40">
                <!-- Create Plan Card -->
                <VBox alignment="CENTER" spacing="15" styleClass="card" 
                      style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
                    <Label text="ðŸ“" style="-fx-font-size: 48px;"/>
                    <Label text="Create Plan">
                        <font>
                            <Font name="System Bold" size="20.0"/>
                        </font>
                    </Label>
                    <Label text="Design your custom" textAlignment="CENTER" wrapText="true" style="-fx-text-fill: #7f8c8d;"/>
                    <Label text="travel itinerary" textAlignment="CENTER" wrapText="true" style="-fx-text-fill: #7f8c8d;"/>
                    <Button text="Start Planning" onAction="#handleCreatePlan" 
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 5;"/>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </VBox>
                
                <!-- Saved Plans Card -->
                <VBox alignment="CENTER" spacing="15" styleClass="card"
                      style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
                    <Label text="ðŸ’¾" style="-fx-font-size: 48px;"/>
                    <Label text="Saved Plans">
                        <font>
                            <Font name="System Bold" size="20.0"/>
                        </font>
                    </Label>
                    <Label text="View and manage" textAlignment="CENTER" wrapText="true" style="-fx-text-fill: #7f8c8d;"/>
                    <Label text="your saved plans" textAlignment="CENTER" wrapText="true" style="-fx-text-fill: #7f8c8d;"/>
                    <Button text="View Plans" onAction="#handleSavedPlans"
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 5;"/>
                </VBox>
                
                <!-- Automatic Route Card -->
                <VBox alignment="CENTER" spacing="15" styleClass="card"
                      style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
                    <Label text="ðŸ”„" style="-fx-font-size: 48px;"/>
                    <Label text="Automatic Route">
                        <font>
                            <Font name="System Bold" size="20.0"/>
                        </font>
                    </Label>
                    <Label text="Let the system find" textAlignment="CENTER" wrapText="true" style="-fx-text-fill: #7f8c8d;"/>
                    <Label text="optimal routes for you" textAlignment="CENTER" wrapText="true" style="-fx-text-fill: #7f8c8d;"/>
                    <Button text="Generate Route" onAction="#handleAutomaticRoute"
                            style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 5;"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 15;">
            <Button text="â“ Help" onAction="#handleHelp" 
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8 20; -fx-cursor: hand; -fx-background-radius: 5;"/>
            <Label text="Plan your multi-modal journey with ease" textFill="white">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>
        </HBox>
    </bottom>
</BorderPane>
