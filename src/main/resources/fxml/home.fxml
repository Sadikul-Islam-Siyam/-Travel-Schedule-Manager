                    <Label text="and permissions" textAlignment="CENTER" wrapText="true" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                    <Button text="Manage Roles" onAction="#handleManageUsers"
                            style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-padding: 10 25; -fx-font-size: 13px; -fx-cursor: hand; -fx-background-radius: 5;"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
    
