<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.CreatePlanController"
            prefHeight="650.0" prefWidth="900.0"
            stylesheets="@../css/styles.css">
    
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Create New Travel Plan" textFill="white">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <HBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            
            <!-- Left side - Search and Schedules -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <!-- Search Section -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                    <Label text="Journey Details" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Start:" minWidth="80"/>
                        <TextField fx:id="startField" promptText="Type to search... (e.g., Dh)" HBox.hgrow="ALWAYS"/>
                    </HBox>
                    
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Destination:" minWidth="80"/>
                        <TextField fx:id="destinationField" promptText="Type to search... (e.g., Ch)" HBox.hgrow="ALWAYS"/>
                    </HBox>
                    
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Date:" minWidth="80"/>
                        <DatePicker fx:id="datePicker" HBox.hgrow="ALWAYS"/>
                    </HBox>
                    
                    <VBox spacing="8">
                        <Label text="Transport Type:" style="-fx-font-weight: bold;"/>
                        <HBox spacing="15">
                            <RadioButton fx:id="allRadio" text="All" selected="true"/>
                            <RadioButton fx:id="busRadio" text="Bus Only"/>
                            <RadioButton fx:id="trainRadio" text="Train Only"/>
                        </HBox>
                    </VBox>
                    
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="searchButton" text="ðŸ” Search Schedules" onAction="#handleSearch" 
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 20; -fx-cursor: hand;"/>
                        <Button text="â†» Reset" onAction="#handleReset"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8 20; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>
                
                <!-- Schedules Table -->
                <VBox spacing="5" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="Available Schedules" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <TableView fx:id="scheduleTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="typeColumn" text="Type" prefWidth="60"/>
                            <TableColumn fx:id="nameColumn" text="Name" prefWidth="100"/>
                            <TableColumn fx:id="originColumn" text="Origin" prefWidth="80"/>
                            <TableColumn fx:id="destinationColumn" text="Destination" prefWidth="90"/>
                            <TableColumn fx:id="departureColumn" text="Departure" prefWidth="120"/>
                            <TableColumn fx:id="arrivalColumn" text="Arrival" prefWidth="120"/>
                            <TableColumn fx:id="fareColumn" text="Fare (à§³)" prefWidth="70"/>
                            <TableColumn fx:id="durationColumn" text="Duration" prefWidth="80"/>
                            <TableColumn fx:id="seatsColumn" text="Seats" prefWidth="50"/>
                        </columns>
                    </TableView>
                    <Button fx:id="addToPlanButton" text="âž• Add to Plan" onAction="#handleAddToPlan"
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-padding: 8 20; -fx-cursor: hand;"/>
                </VBox>
            </VBox>
            
            <!-- Right side - Current Plan -->
            <VBox spacing="10" prefWidth="300" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                <Label text="Your Travel Plan" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                
                <ListView fx:id="planListView" VBox.vgrow="ALWAYS" style="-fx-font-family: 'Courier New';"/>
                
                <Separator/>
                
                <Label fx:id="totalFareLabel" text="Total Fare: à§³0.00" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                
                <Button fx:id="summarizeButton" text="ðŸ“‹ Summarize Plan" onAction="#handleSummarize"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-padding: 10 20; -fx-cursor: hand;"/>
                
                <Separator/>
                
                <Label text="Save Your Plan" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <TextField fx:id="planNameField" promptText="Enter plan name"/>
                <Button fx:id="savePlanButton" text="ðŸ’¾ Save Plan" onAction="#handleSavePlan"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 20; -fx-cursor: hand;"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
