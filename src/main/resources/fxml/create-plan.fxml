<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.CreatePlanController"
            prefHeight="650.0" prefWidth="900.0"
            stylesheets="@../css/styles.css">
    
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button text="â† Back" onAction="#handleBack" 
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 20; -fx-cursor: hand; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);"/>
                <Label text="Create New Travel Plan" textFill="white">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <HBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            
            <!-- Left side - Search and Schedules -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <!-- Search Section -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                    <Label text="Journey Details" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Start:" minWidth="80"/>
                        <TextField fx:id="startField" promptText="Type to search... (e.g., Dh)" HBox.hgrow="ALWAYS"/>
                    </HBox>
                    
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Destination:" minWidth="80"/>
                        <TextField fx:id="destinationField" promptText="Type to search... (e.g., Ch)" HBox.hgrow="ALWAYS"/>
                    </HBox>
                    
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Date:" minWidth="80"/>
                        <DatePicker fx:id="datePicker" HBox.hgrow="ALWAYS"/>
                    </HBox>
                    
                    <VBox spacing="8">
                        <Label text="Transport Type:" style="-fx-font-weight: bold;"/>
                        <HBox spacing="15">
                            <RadioButton fx:id="allRadio" text="All" selected="true"/>
                            <RadioButton fx:id="busRadio" text="Bus Only"/>
                            <RadioButton fx:id="trainRadio" text="Train Only"/>
                        </HBox>
                    </VBox>
                    
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="searchButton" text="ðŸ” Search Schedules" onAction="#handleSearch" 
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 20; -fx-cursor: hand;"/>
                        <Button text="â†» Reset" onAction="#handleReset"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8 20; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>
                
                <!-- Available Schedules -->
                <VBox spacing="5" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Available Schedules" style="-fx-font-weight: bold; -fx-font-size: 14px;" HBox.hgrow="ALWAYS"/>
                        <Label fx:id="searchResultCountLabel" style="-fx-text-fill: #3498db; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                    </HBox>
                    <ScrollPane fx:id="scheduleScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true"
                               style="-fx-background: #f8f9fa; -fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                        <VBox fx:id="scheduleContainer" spacing="8" style="-fx-padding: 10;"/>
                    </ScrollPane>
                </VBox>
            </VBox>
            
            <!-- Right side - Current Plan -->
            <VBox spacing="10" prefWidth="350" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Your Travel Plan" style="-fx-font-weight: bold; -fx-font-size: 16px;" HBox.hgrow="ALWAYS"/>
                    <Label fx:id="legCountLabel" text="0 Legs" style="-fx-text-fill: #3498db; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                </HBox>
                
                <ScrollPane fx:id="planScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true" 
                           style="-fx-background: #f8f9fa; -fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                    <VBox fx:id="planContainer" spacing="8" style="-fx-padding: 10;"/>
                </ScrollPane>
                
                <VBox spacing="5">
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 8; -fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                        <Label text="Total Fare:" style="-fx-font-weight: bold;"/>
                        <Label fx:id="totalFareLabel" text="à§³0.00" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 8; -fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                        <Label text="Total Time:" style="-fx-font-weight: bold;"/>
                        <Label fx:id="totalTimeLabel" text="0h 0m" style="-fx-text-fill: #3498db; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                    </HBox>
                </VBox>
                
                <Label text="Add schedules to build your multi-leg journey. Click 'Summarize' when ready." 
                       wrapText="true" style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px; -fx-padding: 5 0;"/>
                
                <Button fx:id="summarizeButton" text="ðŸ“‹ Summarize &amp; Save Plan" onAction="#handleSummarize"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 12 20; -fx-cursor: hand; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>

