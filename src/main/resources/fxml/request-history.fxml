<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.RequestHistoryController"
            minHeight="500.0" minWidth="800.0"
            stylesheets="@../css/styles.css"
            style="-fx-background-color: linear-gradient(to bottom right, #1a252f, #2c3e50);">
    
    <top>
        <VBox style="-fx-background-color: rgba(44, 62, 80, 0.9); -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button text="â† Back" onAction="#handleBack" 
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="ðŸ“œ Request History" textFill="white">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
            <!-- Filter Section (compact) -->
            <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 10 15; -fx-background-radius: 5;">
                <Label text="Filter:" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                <fx:define>
                    <ToggleGroup fx:id="statusFilterGroup"/>
                </fx:define>
                <RadioButton text="All" toggleGroup="$statusFilterGroup" selected="true" onAction="#handleFilter" style="-fx-font-size: 11px;"/>
                <RadioButton text="Approved" toggleGroup="$statusFilterGroup" onAction="#handleFilter" style="-fx-font-size: 11px;"/>
                <RadioButton text="Rejected" toggleGroup="$statusFilterGroup" onAction="#handleFilter" style="-fx-font-size: 11px;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="statusLabel" textFill="#2c3e50" style="-fx-font-size: 11px; -fx-font-weight: bold;"/>
            </HBox>
            
            <!-- History list (minimal cards) -->
            <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true"
                       style="-fx-background: #ecf0f1; -fx-background-color: #ecf0f1;">
                <VBox fx:id="historyContainer" spacing="8" style="-fx-padding: 5;"/>
            </ScrollPane>
            
            <!-- Empty state -->
            <Label fx:id="emptyLabel" text="No history records found." 
                   textFill="#95a5a6" style="-fx-font-size: 12px; -fx-font-style: italic; -fx-padding: 20;"
                   alignment="CENTER" maxWidth="Infinity"/>
        </VBox>
    </center>
</BorderPane>
