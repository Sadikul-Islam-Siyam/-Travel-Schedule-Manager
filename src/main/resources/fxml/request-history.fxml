<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.RequestHistoryController"
            minHeight="500.0" minWidth="800.0"
            stylesheets="@../css/styles.css"
            style="-fx-background-color: linear-gradient(to bottom right, #1a252f, #2c3e50);">
    
    <top>
        <VBox style="-fx-background-color: rgba(44, 62, 80, 0.9); -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button text="â† Back" onAction="#handleBack" 
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="ðŸ“œ Request History" textFill="white">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #ecf0f1; -fx-background-color: #ecf0f1;">
            <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <!-- Filter Section -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
                <Label text="Filter by status:" style="-fx-font-weight: bold;"/>
                <ToggleGroup fx:id="statusFilterGroup"/>
                <RadioButton text="All" toggleGroup="$statusFilterGroup" selected="true" onAction="#handleFilter"/>
                <RadioButton text="Approved" toggleGroup="$statusFilterGroup" onAction="#handleFilter"/>
                <RadioButton text="Rejected" toggleGroup="$statusFilterGroup" onAction="#handleFilter"/>
            </HBox>
            
            <Label fx:id="statusLabel" textFill="#2c3e50" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            
            <!-- Cards container -->
            <VBox VBox.vgrow="ALWAYS" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8;">
                <Label text="Your Submission History" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>
                <Label text="View all your past API change submissions and their outcomes" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                
                <ScrollPane fx:id="historyScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true"
                           style="-fx-background: #f8f9fa; -fx-background-color: #f8f9fa; -fx-border-color: #d0d0d0; -fx-border-radius: 5;">
                    <VBox fx:id="historyContainer" spacing="10" style="-fx-padding: 10;"/>
                </ScrollPane>
            </VBox>
            
            <!-- Empty state message -->
            <HBox alignment="CENTER" spacing="10">
                <Label fx:id="emptyLabel" text="No history records found." 
                       textFill="#95a5a6" style="-fx-font-size: 14px; -fx-font-style: italic;"/>
            </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
