<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.ViewPlanDetailsController"
            prefHeight="700.0" prefWidth="850.0"
            stylesheets="@../css/styles.css">
    
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button text="â† Back" onAction="#handleBack" 
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 20; -fx-cursor: hand; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);"/>
                <VBox>
                    <Label fx:id="planTitleLabel" text="Plan Details" textFill="white">
                        <font>
                            <Font name="System Bold" size="22.0"/>
                        </font>
                    </Label>
                    <Label fx:id="planCreatedLabel" text="" textFill="#ecf0f1" style="-fx-padding: 5 0 0 0;">
                        <font>
                            <Font size="12.0"/>
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="15" BorderPane.alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
            <!-- Summary Stats -->
            <HBox spacing="15" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
                <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS" 
                      style="-fx-background-color: #3498db; -fx-padding: 15; -fx-background-radius: 5;">
                    <Label fx:id="totalLegsLabel" text="0 Legs" textFill="white">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Label>
                </VBox>
                
                <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: #2ecc71; -fx-padding: 15; -fx-background-radius: 5;">
                    <Label fx:id="totalFareLabel" text="Fare: à§³0.00" textFill="white">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Label>
                </VBox>
                
                <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: #e67e22; -fx-padding: 15; -fx-background-radius: 5;">
                    <Label fx:id="totalTimeLabel" text="Travel: 0h 0m" textFill="white">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Label>
                </VBox>
                
                <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: #9b59b6; -fx-padding: 15; -fx-background-radius: 5;">
                    <Label fx:id="totalDurationLabel" text="Duration: 0h 0m" textFill="white">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Label>
                </VBox>
            </HBox>
            
            <!-- Notes Section (if present) -->
            <VBox fx:id="notesSection" spacing="8" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
                <Label text="ðŸ“ Notes" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <Label fx:id="notesLabel" wrapText="true" style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-padding: 5; -fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-padding: 10;"/>
            </VBox>
            
            <!-- Plan Details -->
            <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
                <Label text="Journey Details" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 0 0 10 0;"/>
                <ScrollPane fx:id="planDetailsScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true" 
                           style="-fx-background: #f8f9fa; -fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                    <VBox fx:id="planDetailsContainer" spacing="8" style="-fx-padding: 10;"/>
                </ScrollPane>
            </VBox>
        </VBox>
    </center>
</BorderPane>
