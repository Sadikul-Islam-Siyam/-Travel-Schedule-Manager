<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.travelmanager.controller.AddBusRouteController"
            style="-fx-background-color: linear-gradient(to bottom right, #1a252f, #2c3e50);">
    
    <top>
        <VBox style="-fx-background-color: rgba(44, 62, 80, 0.9); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);">
            <padding><Insets top="20" right="30" bottom="20" left="30"/></padding>
            
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button text="â† Back" onAction="#handleBack" 
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-font-weight: bold;"/>
                <Label text="Add Bus Route" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #2c3e50; -fx-background-color: #2c3e50;">
            <VBox spacing="20" style="-fx-padding: 30; -fx-background-color: transparent;">
                
                <!-- Bus Route Details Section -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="ðŸšŒ" style="-fx-font-size: 18px;"/>
                        <Label text="Bus Route Details" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    </HBox>
                    
                    <VBox spacing="15">
                        <!-- Bus Name -->
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Bus Name *" style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 600; -fx-min-width: 100;"/>
                            <TextField fx:id="busNameField" promptText="Hanif Paribahan" HBox.hgrow="ALWAYS"
                                       style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-font-size: 13px;"/>
                        </HBox>
                        
                        <Separator style="-fx-background-color: #e0e0e0;"/>
                        
                        <!-- Origin -->
                        <VBox spacing="8">
                            <Label text="Origin *" style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 600;"/>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="ðŸ“" style="-fx-font-size: 16px;"/>
                                <TextField fx:id="originField" promptText="Dhaka" prefWidth="200"
                                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-font-size: 13px;"/>
                                <Label text="Departure:" style="-fx-font-size: 12px; -fx-text-fill: #777; -fx-padding: 0 0 0 15;"/>
                                <TextField fx:id="departureTimeField" promptText="08:30" prefWidth="80"
                                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8; -fx-font-size: 13px; -fx-alignment: center;"/>
                            </HBox>
                        </VBox>
                        
                        <!-- Destination -->
                        <VBox spacing="8">
                            <Label text="Destination *" style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 600;"/>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="ðŸ“" style="-fx-font-size: 16px;"/>
                                <TextField fx:id="destinationField" promptText="Chittagong" prefWidth="200"
                                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-font-size: 13px;"/>
                                <Label text="Arrival:" style="-fx-font-size: 12px; -fx-text-fill: #777; -fx-padding: 0 0 0 15;"/>
                                <TextField fx:id="arrivalTimeField" promptText="14:30" prefWidth="80"
                                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8; -fx-font-size: 13px; -fx-alignment: center;"/>
                                <Label text="Fare (à§³):" style="-fx-font-size: 12px; -fx-text-fill: #777; -fx-padding: 0 0 0 15;"/>
                                <TextField fx:id="fareField" promptText="850" prefWidth="90"
                                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8; -fx-font-size: 13px; -fx-alignment: center;"/>
                            </HBox>
                        </VBox>
                        
                        <!-- Duration (Optional) -->
                        <VBox spacing="8">
                            <Label text="Duration (Optional)" style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 600;"/>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="â±" style="-fx-font-size: 16px;"/>
                                <TextField fx:id="durationField" promptText="6h 0m (auto-calculated if empty)" prefWidth="300"
                                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-font-size: 13px;"/>
                            </HBox>
                        </VBox>
                    </VBox>
                </VBox>
                
                <!-- Note to Master Section -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="âœŽ" style="-fx-font-size: 18px;"/>
                        <Label text="Note to Master (Optional)" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    </HBox>
                    
                    <VBox spacing="8">
                        <Label text="Provide a reason or note to help the master understand why this route should be approved." 
                               style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" wrapText="true"/>
                        <TextArea fx:id="noteToMasterField" promptText="e.g., Updated departure times based on new schedule, Added intermediate stop per customer request..." 
                                  wrapText="true" prefRowCount="3"
                                  style="-fx-background-color: #f8f9fa; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-font-size: 13px;"/>
                    </VBox>
                </VBox>
                
                <!-- Error/Status Labels -->
                <VBox spacing="5">
                    <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 13px; -fx-font-weight: 600;" wrapText="true"/>
                    <Label fx:id="statusLabel" style="-fx-text-fill: #27ae60; -fx-font-size: 13px;" wrapText="true"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(44, 62, 80, 0.9); -fx-padding: 20 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, -2);">
            <Button text="Save Draft" 
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 12 30; -fx-font-size: 14px; -fx-font-weight: 600;"/>
            <Button text="âœ“ Submit for Approval" onAction="#handleSubmit" 
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 12 30; -fx-font-size: 14px; -fx-font-weight: 600;">
                <font><Font name="System Bold" size="14"/></font>
            </Button>
        </HBox>
    </bottom>
    
</BorderPane>
