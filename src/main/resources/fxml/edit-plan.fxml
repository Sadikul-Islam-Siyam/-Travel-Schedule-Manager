<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.EditPlanController"
            prefHeight="700.0" prefWidth="1100.0"
            stylesheets="@../css/styles.css">
    
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="âœ Edit Travel Plan" textFill="white">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            <Label fx:id="planNameLabel" text="" textFill="#ecf0f1" style="-fx-padding: 5 0 0 0;">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="15" BorderPane.alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
            <HBox spacing="15" VBox.vgrow="ALWAYS">
                <!-- Left side - Current Plan -->
                <VBox spacing="10" prefWidth="400" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Current Plan Schedules" style="-fx-font-weight: bold; -fx-font-size: 16px;" HBox.hgrow="ALWAYS"/>
                        <Label fx:id="legCountLabel" text="0 Legs" style="-fx-text-fill: #3498db; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                    </HBox>
                    
                    <ScrollPane fx:id="currentPlanScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true" 
                               style="-fx-background: #f8f9fa; -fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                        <VBox fx:id="currentPlanContainer" spacing="8" style="-fx-padding: 10;"/>
                    </ScrollPane>
                </VBox>
                
                <!-- Right side - Add Schedule -->
                <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
                    <Label text="Add New Schedule" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                    
                    <!-- Search Form - Compact Horizontal Layout -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <VBox spacing="3" prefWidth="180">
                            <Label text="Start:" style="-fx-font-size: 11px; -fx-font-weight: bold;"/>
                            <TextField fx:id="startField" promptText="e.g., Dhaka" style="-fx-font-size: 12px;"/>
                        </VBox>
                        <VBox spacing="3" prefWidth="180">
                            <Label text="Destination:" style="-fx-font-size: 11px; -fx-font-weight: bold;"/>
                            <TextField fx:id="destinationField" promptText="e.g., Chittagong" style="-fx-font-size: 12px;"/>
                        </VBox>
                        <VBox spacing="3" prefWidth="200">
                            <Label text="Date:" style="-fx-font-size: 11px; -fx-font-weight: bold;"/>
                            <DatePicker fx:id="datePicker" prefWidth="200" style="-fx-font-size: 12px;"/>
                        </VBox>
                        <VBox spacing="3" prefWidth="220">
                            <Label text="Transport:" style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <RadioButton fx:id="allRadio" text="All" style="-fx-font-size: 11px;"/>
                                <RadioButton fx:id="busRadio" text="Bus" style="-fx-font-size: 11px;"/>
                                <RadioButton fx:id="trainRadio" text="Train" style="-fx-font-size: 11px;"/>
                            </HBox>
                        </VBox>
                        <VBox spacing="3" alignment="BOTTOM_LEFT">
                            <Button fx:id="searchButton" text="ðŸ” Search" onAction="#handleSearch"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 6 20; -fx-cursor: hand; -fx-font-size: 12px;"/>
                        </VBox>
                    </HBox>
                    
                    <Separator/>
                    
                    <!-- Search Results -->
                    <Label text="Available Schedules" style="-fx-font-weight: bold;"/>
                    <ScrollPane fx:id="searchResultsScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true"
                               style="-fx-background: #f8f9fa; -fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                        <VBox fx:id="searchResultsContainer" spacing="8" style="-fx-padding: 10;"/>
                    </ScrollPane>
                </VBox>
            </HBox>
            
            <!-- Summary Stats, Notes and Action Buttons -->
            <HBox spacing="15" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
                <!-- Left Side - Summary Stats Stack -->
                <VBox spacing="10" prefWidth="220" style="-fx-background-color: #f8f9fa; -fx-padding: 12; -fx-background-radius: 5;">
                    <VBox alignment="CENTER_LEFT" spacing="5" 
                          style="-fx-background-color: #3498db; -fx-padding: 12; -fx-background-radius: 5;">
                        <Label fx:id="totalLegsLabel" text="Total Legs: 0" textFill="white">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                    </VBox>
                    
                    <VBox alignment="CENTER_LEFT" spacing="5"
                          style="-fx-background-color: #2ecc71; -fx-padding: 12; -fx-background-radius: 5;">
                        <Label fx:id="totalFareLabel" text="Total Fare: à§³0.00" textFill="white">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                    </VBox>
                    
                    <VBox alignment="CENTER_LEFT" spacing="5"
                          style="-fx-background-color: #e67e22; -fx-padding: 12; -fx-background-radius: 5;">
                        <Label fx:id="totalTimeLabel" text="Travel: 0h 0m" textFill="white">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                    </VBox>
                    
                    <VBox alignment="CENTER_LEFT" spacing="5"
                          style="-fx-background-color: #9b59b6; -fx-padding: 12; -fx-background-radius: 5;">
                        <Label fx:id="totalDurationLabel" text="Duration: 0h 0m" textFill="white">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                    </VBox>
                </VBox>
                
                <!-- Right Side - Notes and Action Buttons -->
                <VBox spacing="15" HBox.hgrow="ALWAYS">
                    <!-- Notes Section -->
                    <VBox spacing="5">
                        <Label text="ðŸ“ Plan Notes (Optional)" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                        <TextArea fx:id="notesArea" promptText="Add or edit notes for this plan..."
                                 prefRowCount="3" wrapText="true" style="-fx-font-size: 13px;"/>
                    </VBox>
                    
                    <!-- Action Buttons -->
                    <HBox spacing="15" alignment="CENTER">
                        <Button fx:id="saveChangesButton" text="ðŸ’¾ Save Changes" onAction="#handleSaveChanges"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 12 40; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;"/>
                        <Button fx:id="cancelButton" text="âœ– Cancel" onAction="#handleCancel"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 12 40; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 5;"/>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
