<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.ApiApprovalController"
            prefHeight="750.0" prefWidth="1100.0"
            stylesheets="@../css/styles.css"
            style="-fx-background-color: linear-gradient(to bottom right, #1a252f, #2c3e50);">
    
    <top>
        <VBox style="-fx-background-color: rgba(44, 62, 80, 0.9); -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button text="â† Back" onAction="#handleBack" 
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Pending API Changes" textFill="white">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <Label fx:id="statusLabel" textFill="#ecf0f1" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            
            <TableView fx:id="pendingChangesTable" VBox.vgrow="ALWAYS"
                       style="-fx-background-color: white; -fx-background-radius: 10;">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn text="ID" minWidth="40" maxWidth="50" style="-fx-alignment: CENTER;">
                        <cellValueFactory>
                            <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                    </TableColumn>
                    
                    <TableColumn text="Change Type" minWidth="90" maxWidth="110" style="-fx-alignment: CENTER;">
                        <cellValueFactory>
                            <PropertyValueFactory property="changeType"/>
                        </cellValueFactory>
                    </TableColumn>
                    
                    <TableColumn text="Route Name" minWidth="120" prefWidth="160">
                        <cellValueFactory>
                            <PropertyValueFactory property="routeName"/>
                        </cellValueFactory>
                    </TableColumn>
                    
                    <TableColumn text="Origin" minWidth="90" prefWidth="120">
                        <cellValueFactory>
                            <PropertyValueFactory property="origin"/>
                        </cellValueFactory>
                    </TableColumn>
                    
                    <TableColumn text="Destination" minWidth="90" prefWidth="120">
                        <cellValueFactory>
                            <PropertyValueFactory property="destination"/>
                        </cellValueFactory>
                    </TableColumn>
                    
                    <TableColumn text="Type" minWidth="70" maxWidth="90" style="-fx-alignment: CENTER;">
                        <cellValueFactory>
                            <PropertyValueFactory property="transportType"/>
                        </cellValueFactory>
                    </TableColumn>
                    
                    <TableColumn text="Submitted By" minWidth="100" prefWidth="120">
                        <cellValueFactory>
                            <PropertyValueFactory property="submittedBy"/>
                        </cellValueFactory>
                    </TableColumn>
                    
                    <TableColumn text="Date" minWidth="110" prefWidth="140">
                        <cellValueFactory>
                            <PropertyValueFactory property="submittedDate"/>
                        </cellValueFactory>
                    </TableColumn>
                    
                    <TableColumn text="Actions" minWidth="180" maxWidth="220" style="-fx-alignment: CENTER;"/>
                </columns>
            </TableView>
            
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10 0 0 0;">
                <Label fx:id="emptyLabel" text="No pending API changes awaiting approval." 
                       textFill="#95a5a6" style="-fx-font-size: 14px; -fx-font-style: italic;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
