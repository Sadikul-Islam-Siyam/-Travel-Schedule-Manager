<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.ManageRoutesController"
            minHeight="500.0" minWidth="800.0"
            stylesheets="@../css/styles.css"
            style="-fx-background-color: linear-gradient(to bottom right, #1a252f, #2c3e50);">
    
    <top>
        <VBox style="-fx-background-color: rgba(44, 62, 80, 0.9); -fx-padding: 20;" spacing="15">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button text="â† Back" onAction="#handleBack" 
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Edit API / Manage Routes" textFill="white">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="âž• Add Route" onAction="#handleAddRoute"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
                <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
            </HBox>
            
            <!-- Transport Type Filter and Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="12">
                <Label text="Filter by:" textFill="#ecf0f1" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
                <Button fx:id="showAllBtn" text="All" onAction="#handleShowAll" 
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 20; -fx-cursor: hand; -fx-background-radius: 5; -fx-font-weight: bold;"/>
                <Button fx:id="showBusBtn" text="ðŸšŒ Bus Only" onAction="#handleShowBus" 
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 20; -fx-cursor: hand; -fx-background-radius: 5;"/>
                <Button fx:id="showTrainBtn" text="ðŸš† Train Only" onAction="#handleShowTrain" 
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 20; -fx-cursor: hand; -fx-background-radius: 5;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchField" promptText="ðŸ” Search by name, origin, or destination..." prefWidth="320"
                           style="-fx-background-color: white; -fx-font-size: 12px; -fx-padding: 8 12; -fx-background-radius: 5; -fx-border-radius: 5;"/>
                <Button text="âœ•" onAction="#handleClearSearch" 
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 12; -fx-cursor: hand; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="12" style="-fx-padding: 20;">
            <Label fx:id="statusLabel" textFill="#ecf0f1" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            
            <TableView fx:id="routesTable" maxHeight="550" prefHeight="550"
                       style="-fx-background-color: white; -fx-background-radius: 8; -fx-fixed-cell-size: 40;">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50" minWidth="40" maxWidth="60" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="routeNameColumn" text="Bus / Train Service" prefWidth="160" minWidth="140"/>
                    <TableColumn fx:id="originColumn" text="Origin" prefWidth="100" minWidth="90"/>
                    <TableColumn fx:id="destinationColumn" text="Destination" prefWidth="110" minWidth="90"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="70" minWidth="60" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="durationColumn" text="Duration (min)" prefWidth="95" minWidth="85" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="priceColumn" text="Price" prefWidth="75" minWidth="65" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="75" minWidth="65" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="180" minWidth="160" style="-fx-alignment: CENTER;"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            
            <HBox alignment="CENTER" spacing="10">
                <Label fx:id="emptyLabel" text="No routes available. Click 'Add Route' to create one." 
                       textFill="#95a5a6" style="-fx-font-size: 13px; -fx-font-style: italic;"/>
            </HBox>
        </VBox>
    </center>
    
    <!-- Add/Edit Route Form (Initially Hidden) -->
    <right>
        <VBox fx:id="formPanel" style="-fx-background-color: white; -fx-pref-width: 380; -fx-max-width: 380;" visible="false" managed="false">
            <!-- Fixed Header -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 15 20; -fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
                <Label fx:id="formTitle" text="Add New Route" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="âœ•" onAction="#handleCloseForm" 
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5 10; -fx-cursor: hand; -fx-background-radius: 3;"/>
            </HBox>
            
            <!-- Scrollable Form Content -->
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background: white;">
                <VBox spacing="10" style="-fx-padding: 15 20;">
                    <VBox spacing="3">
                        <Label text="Train/Bus Name *" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                        <TextField fx:id="routeNameField" style="-fx-pref-height: 32;"/>
                    </VBox>
                    
                    <VBox spacing="3">
                        <Label text="Start *" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                        <TextField fx:id="originField" style="-fx-pref-height: 32;"/>
                    </VBox>
                    
                    <VBox spacing="3">
                        <Label text="Destination *" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                        <TextField fx:id="destinationField" style="-fx-pref-height: 32;"/>
                    </VBox>
                    
                    <VBox spacing="3">
                        <Label text="Transport Type *" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                        <ComboBox fx:id="transportTypeCombo" promptText="Select type" prefWidth="340" style="-fx-pref-height: 32;"/>
                    </VBox>
                    
                    <HBox spacing="8">
                        <VBox spacing="3" HBox.hgrow="ALWAYS">
                            <Label text="Duration (min) *" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                            <TextField fx:id="durationField" promptText="120" style="-fx-pref-height: 32;"/>
                        </VBox>
                        <VBox spacing="3" HBox.hgrow="ALWAYS">
                            <Label text="Price (BDT) *" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                            <TextField fx:id="priceField" promptText="450.00" style="-fx-pref-height: 32;"/>
                        </VBox>
                    </HBox>
                    
                    <HBox spacing="8">
                        <VBox spacing="3" HBox.hgrow="ALWAYS">
                            <Label text="Departure Time" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                            <TextField fx:id="departureTimeField" promptText="08:00" style="-fx-pref-height: 32;"/>
                        </VBox>
                        <VBox spacing="3" HBox.hgrow="ALWAYS">
                            <Label text="Arrival Time" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                            <TextField fx:id="arrivalTimeField" promptText="10:30" style="-fx-pref-height: 32;"/>
                        </VBox>
                    </HBox>
                    
                    <Label text="Times in 24h format (HH:mm)" style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d; -fx-font-style: italic;"/>
                    
                    <VBox spacing="3">
                        <Label text="Status" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                        <ComboBox fx:id="statusCombo" promptText="Select status" prefWidth="340" style="-fx-pref-height: 32;"/>
                    </VBox>
                    
                    <VBox spacing="3">
                        <Label text="Additional Metadata (Optional)" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                        <TextArea fx:id="metadataField" promptText="Extra route information..." prefRowCount="2" wrapText="true" style="-fx-pref-height: 55;"/>
                    </VBox>
                    
                    <VBox spacing="3">
                        <Label text="Notes for Master (Optional)" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                        <TextArea fx:id="notesField" promptText="Explain why this change is needed..." prefRowCount="2" wrapText="true" style="-fx-pref-height: 55;"/>
                    </VBox>
                    
                    <Separator/>
                    
                    <Label text="Note: Your changes will be submitted for master approval" 
                           style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d; -fx-font-style: italic;" wrapText="true"/>
                    
                    <Label fx:id="formErrorLabel" textFill="#e74c3c" style="-fx-font-size: 11px; -fx-font-weight: bold;" wrapText="true"/>
                </VBox>
            </ScrollPane>
            
            <!-- Fixed Footer with Buttons -->
            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 12 20; -fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
                <Button fx:id="saveButton" text="Save Route" onAction="#handleSaveRoute" prefWidth="140"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
                <Button text="Cancel" onAction="#handleCloseForm" prefWidth="140"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 15; -fx-cursor: hand; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </right>
</BorderPane>
