<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.SavedPlansController"
            prefHeight="650.0" prefWidth="900.0"
            stylesheets="@../css/styles.css">
    
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Saved Travel Plans" textFill="white">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="15" BorderPane.alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <!-- Plan list section -->
            <VBox VBox.vgrow="ALWAYS" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8;">
                <Label text="Your Saved Travel Plans" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>
                <Label text="Click on a plan to select it" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                
                <ScrollPane fx:id="plansScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true"
                           style="-fx-background: #f8f9fa; -fx-background-color: #f8f9fa; -fx-border-color: #d0d0d0; -fx-border-radius: 5;">
                    <VBox fx:id="plansContainer" spacing="8" style="-fx-padding: 10;"/>
                </ScrollPane>
            </VBox>
            
            <!-- Action buttons -->
            <HBox spacing="15" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8;">
                <Button fx:id="viewButton" text="ðŸ‘ View Details" onAction="#handleViewPlan" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 12 30; -fx-cursor: hand; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button fx:id="editButton" text="âœ Edit Plan" onAction="#handleEditPlan" 
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 12 30; -fx-cursor: hand; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button fx:id="deleteButton" text="ðŸ—‘ Delete Plan" onAction="#handleDeletePlan" 
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 12 30; -fx-cursor: hand; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button text="â†» Refresh List" onAction="#handleRefresh" 
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 12 30; -fx-cursor: hand; -fx-font-size: 14px; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
