<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.SavedPlansController"
            prefHeight="650.0" prefWidth="900.0"
            stylesheets="@../css/styles.css">
    
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Saved Travel Plans" textFill="white">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="10" BorderPane.alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20;">
            <Label text="Your saved plans will appear here" style="-fx-font-size: 14px;"/>
            <ListView fx:id="savedPlansList" VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>
</BorderPane>
