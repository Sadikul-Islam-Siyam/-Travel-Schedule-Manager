<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travelmanager.controller.SummarizePlanController"
            prefHeight="700.0" prefWidth="800.0"
            stylesheets="@../css/styles.css">
    
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="ðŸ“‹ Travel Plan Summary" textFill="white">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            <Label text="Review your itinerary and save your plan" textFill="#ecf0f1" style="-fx-padding: 5 0 0 0;">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="15" BorderPane.alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
            <!-- Main Content - Horizontal Split -->
            <HBox spacing="15" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
                <!-- Left Side - Summary Stats Stack -->
                <VBox spacing="10" prefWidth="220" style="-fx-background-color: #f8f9fa; -fx-padding: 12; -fx-background-radius: 5;">
                    <VBox alignment="CENTER_LEFT" spacing="5" 
                          style="-fx-background-color: #3498db; -fx-padding: 12; -fx-background-radius: 5;">
                        <Label fx:id="totalLegsLabel" text="Total Legs: 0" textFill="white">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                    </VBox>
                    
                    <VBox alignment="CENTER_LEFT" spacing="5"
                          style="-fx-background-color: #2ecc71; -fx-padding: 12; -fx-background-radius: 5;">
                        <Label fx:id="totalFareLabel" text="Total Fare: à§³0.00" textFill="white">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                    </VBox>
                    
                    <VBox alignment="CENTER_LEFT" spacing="5"
                          style="-fx-background-color: #e67e22; -fx-padding: 12; -fx-background-radius: 5;">
                        <Label fx:id="totalTimeLabel" text="Travel Time: 0h 0m" textFill="white">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                    </VBox>
                    
                    <VBox alignment="CENTER_LEFT" spacing="5"
                          style="-fx-background-color: #9b59b6; -fx-padding: 12; -fx-background-radius: 5;">
                        <Label fx:id="totalDurationLabel" text="Total Duration: 0h 0m" textFill="white">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                    </VBox>
                </VBox>
                
                <!-- Right Side - Journey Cards -->
                <VBox VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" spacing="10">
                    <Label text="Your Complete Journey" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <ScrollPane fx:id="planSummaryScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true"
                               style="-fx-background: #f8f9fa; -fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                        <VBox fx:id="planSummaryContainer" spacing="8" style="-fx-padding: 10;"/>
                    </ScrollPane>
                </VBox>
            </HBox>
            
            <!-- Save Section -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8;">
                <Label text="ðŸ’¾ Save Your Plan" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <Label text="Enter a unique name to save this travel plan for future reference" 
                       style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Plan Name:" minWidth="100" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="planNameField" promptText="e.g., Dhaka to Cox's Bazar Trip" 
                               HBox.hgrow="ALWAYS" style="-fx-font-size: 14px;"/>
                </HBox>
                
                <VBox spacing="5">
                    <Label text="Notes (Optional):" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="notesArea" promptText="Add any notes or comments about this plan (e.g., booking confirmations, special requirements, etc.)"
                             prefRowCount="3" wrapText="true" style="-fx-font-size: 13px;"/>
                </VBox>
                
                <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="savePlanButton" text="ðŸ’¾ Save Plan" onAction="#handleSavePlan"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 12 40; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;"/>
                    <Button fx:id="cancelButton" text="âœ– Cancel" onAction="#handleCancel"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 12 40; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 5;"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
